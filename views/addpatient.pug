html(lang='en')
  head
  body.grey.lighten-3
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    title Front Desk Dashboard
    // Bootstrap core CSS
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
    // Material Design Bootstrap
    link(href='https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.4/css/mdb.min.css', rel='stylesheet')
    // JQuery
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    // Bootstrap tooltips
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js')
    // Bootstrap core JavaScript
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js')
    // MDB core JavaScript
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.4/js/mdb.min.js')
    style.
      body
      {
      font-size:11px;
      background-size: cover;
      background-repeat: no-repeat;
      background-attachment: fixed;
      }
      html,
      body,
      header,
      .view {
      height: 100%;
      }
      @media (max-width: 740px) {
      html,
      body,
      header,
      .view {
      height: 1000px;
      }
      }
      @media (min-width: 800px) and (max-width: 850px) {
      html,
      body,
      header,
      .view {
      height: 650px;
      background-color:#1a344d;
      }
      }
      @media (min-width: 800px) and (max-width: 850px) {
      .navbar:not(.top-nav-collapse) {
      background: #1C2331;
      }
      }
      .sidenav {
      height: 100%;
      width: 0;
      position: fixed;
      z-index: 1;
      top: 0;
      left: 0;
      background-color: #111;
      overflow-x: hidden;
      transition: 0.5s;
      padding-top: 60px;
      }
      .sidenav a {
      padding: 8px 8px 8px 32px;
      text-decoration: none;
      font-size: 15px;
      color: #818181;
      display: block;
      transition: 0.3s;
      }
      .sidenav a:hover {
      color: #f1f1f1;
      }
      .sidenav .closebtn {
      position: absolute;
      top: 0;
      right: 25px;
      font-size: 36px;
      margin-left: 50px;
      }
      @media screen and (max-height: 450px) {
      .sidenav {padding-top: 15px;}
      .sidenav a {font-size: 18px;}
      }
    // Main Navigation
    header
      // Navbar
      .container
        .row
          .col
            section.mt-5.wow.fadeIn
              .card
                h5.card-header.info-color.white-text.text-center.py-4
                  strong Add New Business Contact
                // Card content
                .card-body.px-lg-5.pt-0
                  // Form
                  form.text-center(action='/addpatientlogic', method='POST', style='color: #757575;')
                    .form-row
                      .col
                        // First name
                        .md-form
                          label First name
                          br
                          br
                          input#defaultRegisterForm.form-control(type='text', name='fname')
                      .col
                        // Last name
                        .md-form
                          label Last name
                          br
                          br
                          input#materialRegisterFormLastName.form-control(type='text', name='fname')
                    // E-mail
                    .md-form.mt-0
                      label E-mail
                      br
                      br
                      input#materialRegisterFormEmail.form-control(type='email', name='email')
                    .md-form.mt-0
                      label CNIC
                      br
                      br
                      input#materialRegisterForm.form-control(type='text', name='nic')
                    .md-form.mt-0
                      label DOB (MM/DD/YYYY)
                      br
                      br
                      input.form-control(type='text', name='datebirth')
                    .md-form.mt-0
                      label Registration Number
                      br
                      br
                      input.form-control(type='text', name='regnum')
                    .md-form.mt-0
                      label Mobile Phone Number
                      br
                      br
                      input.form-control(type='text', name='mob')
                    .md-form.mt-0
                      label Landline Phone Number
                      br
                      br
                      input.form-control(type='text', name='pho')
                    .md-form.mt-0
                      label Address
                      br
                      br
                      input.form-control(type='text', name='add')
                    .md-form.mt-0
                      label Other Information
                      br
                      br
                      input.form-control(type='text', name='othinf')
                    // Sign up button
                    button.btn.btn-outline-info.btn-rounded.btn-block.my-4.waves-effect.z-depth-0(onclick='upd()', type='submit') Add
                  // Form
    script.
      function openNav() {
      document.getElementById("mySidenav").style.width = "200px";
      }
      function upd()
      {
      document.getElementById('list').contentWindow.location.reload(true);
      }
      function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
      }
